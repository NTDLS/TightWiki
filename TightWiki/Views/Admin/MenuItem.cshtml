@using TightWiki.Library
@using TightWiki.Models
@inject IViewLocalizer Localizer
@model TightWiki.Models.ViewModels.Admin.MenuItemViewModel
@{
    Layout = "_Layout";
    var sessionState = ViewData["SessionState"] as TightWiki.SessionState ?? throw new Exception("Wiki State Context cannot be null.");
}

<h3>@Localizer["Site Menu Item"]</h3>

<p>@Localizer["Global configuration for the site menu item."]</p>

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group row mb-1">
        <label for="Name" class="col-sm-2 col-form-label"><strong>@Localizer["Name"]</strong></label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = Localizer["required"].Value })
            <div class="text-danger">@Html.ValidationMessageFor(m => m.Name)</div>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label for="Link" class="col-sm-2 col-form-label"><strong>@Localizer["Hyperlink"]</strong></label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Link, new { @class = "form-control", placeholder = Localizer["required"].Value })
            <div class="text-danger">@Html.ValidationMessageFor(m => m.Link)</div>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label for="Ordinal" class="col-sm-2 col-form-label"><strong>@Localizer["Ordinal"]</strong></label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Ordinal, new { @class = "form-control", placeholder = Localizer["required"].Value })
            <div class="text-danger">@Html.ValidationMessageFor(m => m.Ordinal)</div>
        </div>
    </div>
    <div class="form-group row mb-1">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
        </div>
    </div>
}

<div class="d-flex justify-content-between align-items-center mt-2" id="toolbar">
    <div>
        @*Left-aligned "toolbar" controls*@
        @ConfirmActionHelper.GenerateDangerButton(GlobalConfiguration.BasePath,
            Localizer["Deleting '{0}' will permanently remove the menu item and you will not be able to revert this action. Continue?"].Format(Model.Name),
            Localizer["Delete"].Value, $"/Admin/DeleteMenuItem/{@Model.Id}", $"{GlobalConfiguration.BasePath}/Admin/MenuItems", Context.Request.Path.Value)
    </div>

    <div>
        @*Right-aligned "toolbar" controls*@
    </div>
</div>
